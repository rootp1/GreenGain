# GreenGain Project Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# BACKEND CONFIGURATION (/backend/.env)
# ===========================================

# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=4000
HOST=localhost

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Database Configuration (Supabase)
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# External API Keys
IMGBB_API_KEY=your_imgbb_api_key
GEMINI_API_KEY=your_google_gemini_api_key

# ML Model Service Configuration
ML_MODEL_URL=http://localhost:5000
ML_MODEL_HOST=127.0.0.1
ML_MODEL_PORT=5000

# ===========================================
# FRONTEND CONFIGURATION (/next/.env.local)
# ===========================================

# API URLs - Backend Server
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000

# API URLs - ML Model Server  
NEXT_PUBLIC_ML_MODEL_URL=http://localhost:5000

# Application Configuration
NEXT_PUBLIC_APP_NAME=GreenGain
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment
NEXT_PUBLIC_NODE_ENV=development

# ===========================================
# ML MODEL CONFIGURATION (/ml_model/.env)
# ===========================================

# Flask Server Configuration
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=True

# CORS Configuration - Allowed Origins
CORS_ORIGINS=your_production_domain,http://localhost:3000

# Model Configuration
MODEL_PATH=./model/
MODEL_NAME=tree_species_model

# Application Configuration
APP_NAME=GreenGain ML Model Service
APP_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
